<div class="w3-content w3-display-container">
<% for i in 1..day_count %>


<div class="mySlides">
<img src="<%='images/'+i.to_s+'/map'+i.to_s+'.png' %>" style="width:60%">
  <div class="text">
  <%= link_to 'Day '+i.to_s+': '+titles[i-1], '/day/'+i.to_s+'.html', :relative => true %>
  <p><%= ''+froms[i-1] +' to ' + tos[i-1]+': '+  distances[i-1].to_s+'km' %></p>
  </div>

</div>



<% end %>
<button class="w3-button w3-black w3-display-left" onclick="plusDivs(-1)">&#10094;</button>
<input id="day_chooser" type="range" min="1" max="<%= day_count %>" value="1" step="1" onchange="changeDay(this.value)">
  <button class="w3-button w3-black w3-display-right" onclick="plusDivs(1)">&#10095;</button>
</div>



<script>
var slideIndex = 1;
showDivs(slideIndex);

function plusDivs(n) {
  showDivs(slideIndex += n);
    document.getElementById("day_chooser").value =  slideIndex;
}

function showDivs(n) {
  var i;
  var x = document.getElementsByClassName("mySlides");
  if (n > x.length) {slideIndex = 1}
  if (n < 1) {slideIndex = x.length}
  for (i = 0; i < x.length; i++) {
    x[i].style.display = "none";  
  }
  x[slideIndex-1].style.display = "block";
}

function changeDay(n){
	slideIndex = n;
	showDivs(slideIndex);
}
</script>

